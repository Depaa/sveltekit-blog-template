{
	"name": "frontend",
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite dev --port 5173 --open --mode quality",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"deploy:quality": "vite build --mode quality",
		"deploy:production": "vite build --mode production"
	},
	"dependencies": {
		"aws-amplify": "5.0.15",
		"dompurify": "^3.0.3",
		"easymde": "^2.18.0",
		"font-awesome": "^4.7.0",
		"highlight.js": "^11.8.0",
		"object-hash": "^3.0.0",
		"sass": "^1.63.4",
		"svelte-inview": "^4.0.0"
	},
	"devDependencies": {
		"@fontsource/fira-mono": "^5.0.3",
		"@mdepascale/sveltekit-aws-adapter": "^0.0.1",
		"@neoconfetti/svelte": "^1.0.0",
		"@sveltejs/adapter-auto": "^2.1.0",
		"@sveltejs/kit": "^1.20.2",
		"@types/cookie": "^0.5.1",
		"@types/dompurify": "^3.0.2",
